#!/bin/bash

set -o -e pipefail

cd `dirname $0`
base_dir=`pwd`

yes | (
sudo apt-get update
sudo apt-get install wget --yes
sudo apt-get install sbcl --yes
)

$base_dir/install-quicklisp "sbcl --script"

cp $HOME/.sbclrc init.lisp
echo '>>>>>>>>>>>>>> RUNNING TEST'
yes '' | sbcl --script run-tests.lisp

